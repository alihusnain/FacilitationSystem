@{
    ViewBag.Title = "editStudentAttendence";
}

<h2>editStudentAttendence</h2>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<head>
    <title> </title>

</head>
@{
    int size = 0;
    int j = 0;
    string tmp = "";
    List<int> Id = new List<int>();
    

    <form class="form-horizontal" role="form" action="/Admin/updateStudentAttendence" method="post">
        <div class="container" style="width:800px">
            <table class="table table-striped table-bordered table-condensed">
                <thread>
                    <tr>
                        <th>Name</th>
                        
                        <th>Attendence</th>
                    </tr>
                </thread>
                

               @foreach (var ob in ViewBag.attendence)
               {
                   foreach (var i in ViewBag.id)
                   {
                       if (i == ob.StudentSubjectSectionID)
                       {

                           foreach (var st in ViewBag.studentSubjectSection)
                           {
                               if (i == st.StudentSubjectSectionID)
                               {

                                   foreach (var std in ViewBag.student)
                                   {
                                       if (st.StudentID == std.StudentId)
                                       {
                                        <tr>
                                            <td>@std.StudentName</td>
                                            @if (ob.attendance == "P")
                                            {
                                            <td>  <input type="checkbox" name="@ob.StudentAttendenceID" checked /></td>
                                            }
                                            else
                                            {
                                            <td>  <input type="checkbox" name="@ob.StudentAttendenceID" /></td>
                                            }
                                        </tr>

                                       }
                                   }
                               }
                           }
                       }
                   }
               }
            </table>

            <input type="submit" style="margin-left:500px" />
        </div>
    </form>
}
