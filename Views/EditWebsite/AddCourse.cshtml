@{
    ViewBag.Title = "Add Course";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<body>

    <div class="container">
        <div class="col-lg-5"></div>
        <h3 class="col-lg-6">Add New Course</h3>
    </div>

    <div>
        <form action="/EditWebsite/AddNewCourse" class="form-horizontal" role="form" enctype="multipart/form-data" method="post">
            <div class="col-lg-8">
  
                <div class="form-group">
                    <label class="control-label col-lg-3" for="title">Course Title: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="title" placeholder="Enter Course Title" required id="CourseTitle" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="description">Course Description: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="description" placeholder="Enter Course Description" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="instructor">Course Instructor: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="instructor" placeholder="Enter Course Instructor" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="timings">Class Timings: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="timings" placeholder="Enter Class Timings" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="duration">Course Duration: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="description" placeholder="Enter Course Duration" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="fee">Course Fee: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="fee" placeholder="Enter Course Fee" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

             </div>
      

            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Add Course" id="sumbit" class="btn btn-success" @*onclick="return emailValidate()"*@ />
                </div>
            </div>

        </form>
    </div>
</body>
