@{
    ViewBag.Title = "Add Event";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<body>

    <div class="container">
        <div class="col-lg-5"></div>
        <h3 class="col-lg-6">Add New Event</h3>
    </div>

    <div>
        <form action="/EditWebsite/AddNewEvent" class="form-horizontal" role="form" enctype="multipart/form-data" method="post">
            <div class="col-lg-8">

                <div class="form-group">
                    <label class="control-label col-lg-3" for="title">Event Title: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="title" placeholder="Enter Event Title" required="" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="description">Event Description: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="description" placeholder="Enter Event Description" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="date">Event Date: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="date" placeholder="Enter Event Date" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="location">Event Location: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="location" placeholder="Enter Event Location" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

            </div>


            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Add Course" id="sumbit" class="btn btn-success" @*onclick="return emailValidate()"*@ />
                </div>
            </div>

        </form>
    </div>
</body>