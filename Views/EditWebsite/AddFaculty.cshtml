@{
    ViewBag.Title = "AddFaculty";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<body>

    <div class="container">
        <div class="col-lg-5"></div>
        <h3 class="col-lg-6">Add New Faculty</h3>
    </div>

    <div>
        <form action="/EditWebsite/AddNewFaculty" class="form-horizontal" role="form" enctype="multipart/form-data" method="post">
            <div class="col-lg-8">

                <div class="form-group">
                    <label class="control-label col-lg-3" for="designation">Faculty Designation: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="designation" placeholder="Enter Faculty Designation" required id="FacultyDesignation" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="description">Faculty Description: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="description" placeholder="Enter Faculty Description" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="name">Faculty Name: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="name" placeholder="Enter Faculty Name" required id="FacultyName" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="facebook">Facebook ID: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="facebook" placeholder="Enter Facebook ID" required="" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="googleplus">Google Plus ID: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="googleplus" placeholder="Enter Google Plus ID" required="" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="twitter">Twitter ID: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="twitter" placeholder="Enter Twitter ID" required="" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="instagram">Instagram ID: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="instagram" placeholder="Enter Instagram ID" required="" />
                    </div>
                </div>

            </div>


            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Add Faculty" id="sumbit" class="btn btn-success" @*onclick="return emailValidate()"*@ />
                </div>
            </div>

        </form>
    </div>
</body>