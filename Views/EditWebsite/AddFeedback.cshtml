@{
    ViewBag.Title = "AddFeedback";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<body>

    <div class="container">
        <div class="col-lg-5"></div>
        <h3 class="col-lg-6">Add New Student Feedback</h3>
    </div>

    <div>
        <form action="/EditWebsite/AddNewFeedback" class="form-horizontal" role="form" enctype="multipart/form-data" method="post">
            <div class="col-lg-8">

                <div class="form-group">
                    <label class="control-label col-lg-3" for="name">Student Name: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="name" placeholder="Enter Student Name" required="required" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="email">Student Email / Roll Number: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="email" placeholder="Enter Student Email / Roll Number" required="" />
                    </div>
                    <div class="col-lg-3" id="result"></div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="subject">Feedback Subject: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="subject" placeholder="Enter Feedback Subject" required id="FeedbackSubject" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3" for="comment">Comment: </label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" name="comment" placeholder="Enter Comment" required="" />
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Add Feedback" id="sumbit" class="btn btn-success" @*onclick="return emailValidate()"*@ />
                </div>
            </div>

        </form>
    </div>
</body>