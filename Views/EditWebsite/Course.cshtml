@{
    ViewBag.Title = "Course";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Course</h2>

@using EADWebTeacherFacilitationSystem.Models
<body>

    <div class="container">

        <table class="table table-striped table-bordered table-hover">
            <tr><th>Course ID</th><th>Course Title</th><th>Course Description</th><th>Instructor</th><th>Timings</th><th>Duration</th><th>Course Fee</th><th>Update</th><th>Remove</th></tr>
        
            @foreach (Course i in Model)
            {
                <tr><td>@i.CourseId</td><td>@i.CourseTitle</td><td>@i.CourseDescription</td><td>@i.CourseInstructor</td><td>@i.ClassTimings</td><td>@i.CourseDuration</td><td>@i.CourseFee</td><td> <a href="@("../EditWebsite/EditCourse/" + i.CourseId)">   <input class="btn btn-primary" type="button" value="Edit"> </a> </td><td><a href="@("../EditWebsite/DeleteCourse/" + i.CourseId)">   <input class="btn btn-danger" type="button" value="Delete"> </a></td></tr>
            }

        </table>

    </div>
    
    <div class="container">
        <div class="col-lg-5"></div>
        <a class="col-lg-6" href="@("../EditWebsite/AddCourse")"> <input class="btn btn-info" type="button" value="Add a Course (+)"> </a>
    </div>


</body>
