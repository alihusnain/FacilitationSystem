@model EADWebTeacherFacilitationSystem.Models.EventOfInstitute

@{
    ViewBag.Title = "Edit Event";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<body>
    <div class="container">
        <div class="col-lg-5"></div>
        <h3 class="col-lg-6">Edit Event Information</h3>
    </div>

    <div>
        @using (Html.BeginForm("SaveEditEvent", "EditWebsite", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(u => u.EventId)

            <div class="form-group">
                @Html.LabelFor(q => q.EventTitle, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.EventTitle, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(q => q.EventDescription, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextAreaFor(q => q.EventDescription, new { @class = "form-control" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(q => q.EventDate, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.EventDate, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(q => q.EventLocation, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.EventLocation, new { @class = "form-control" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Save" />
                </div>
            </div>

        }
    </div>
</body>