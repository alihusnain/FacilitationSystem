@model EADWebTeacherFacilitationSystem.Models.Faculty

@{
    ViewBag.Title = "Edit Faculty";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<body>
    <div class="container">
        <div class="col-lg-5"></div>
        <h3 class="col-lg-6">Edit Faculty Information</h3>
    </div>

    <div>
        @using (Html.BeginForm("SaveEditFaculty", "EditWebsite", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(u => u.FacultyId)

            <div class="form-group">
                @Html.LabelFor(q => q.FacultyDesignation, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.FacultyDesignation, new { @class = "form-control" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(q => q.FacultyName, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.FacultyName, new { @class = "form-control" })
                </div>
            </div>
            
           <div class="form-group">
                @Html.LabelFor(q => q.FacultyDescription, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextAreaFor(q => q.FacultyDescription, new { @class = "form-control" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(q => q.FacebookID, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.FacebookID, new { @class = "form-control" })
                </div>
            </div>
            
             <div class="form-group">
                @Html.LabelFor(q => q.GooglePlusID, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.GooglePlusID, new { @class = "form-control" })
                </div>
            </div>
            
                        <div class="form-group">
                @Html.LabelFor(q => q.TwitterID, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.TwitterID, new { @class = "form-control" })
                </div>
            </div>
            
                        <div class="form-group">
                @Html.LabelFor(q => q.InstagramID, new { @class = "control-label col-lg-3" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(q => q.InstagramID, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Save" />
                </div>
            </div>

        }
    </div>
</body>

