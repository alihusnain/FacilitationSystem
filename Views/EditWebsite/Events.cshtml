@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Events</h2>

@using EADWebTeacherFacilitationSystem.Models
<body>

    <div class="container">

        <table class="table table-striped table-hover">
            <tr><th>Event ID</th><th>Event Title</th><th>Event Description</th><th>Event Date</th><th>Event Location</th><th>Update</th><th>Remove</th></tr>

            @foreach (EventOfInstitute i in Model)
            {
                <tr><td>@i.EventId</td><td>@i.EventTitle</td><td>@i.EventDescription</td><td>@i.EventDate</td><td>@i.EventLocation</td><td> <a href="@("../EditWebsite/EditEvent/" + i.EventId)">   <input class="btn btn-primary" type="button" value="Edit"> </a> </td><td><a href="@("../EditWebsite/DeleteEvent/" + i.EventId)">   <input class="btn btn-danger" type="button" value="Delete"> </a></td></tr>
            }

        </table>

    </div>

    <div class="container">
        <div class="col-lg-5"></div>
        <a class="col-lg-6" href="@("../EditWebsite/AddEvent")"> <input class="btn btn-info" type="button" value="Add an Event (+)"> </a>
    </div>


</body>