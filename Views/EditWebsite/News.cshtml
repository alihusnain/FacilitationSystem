@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>News</h2>

@using EADWebTeacherFacilitationSystem.Models
<body>

    <div class="container">

        <table class="table table-striped table-hover">
            <tr><th>News ID</th><th>News Title</th><th>News Description</th><th>News Date</th><th>Update</th><th>Remove</th></tr>

            @foreach (News i in Model)
            {
                <tr><td>@i.NewsId</td><td>@i.NewsTitle</td><td>@i.NewsDescription</td><td>@i.NewsDate</td><td> <a href="@("../EditWebsite/EditNews/" + i.NewsId)">   <input class="btn btn-primary" type="button" value="Edit"> </a> </td><td><a href="@("../EditWebsite/DeleteNews/" + i.NewsId)">   <input class="btn btn-danger" type="button" value="Delete"> </a></td></tr>
            }

        </table>

    </div>

    <div class="container">
        <div class="col-lg-5"></div>
        <a class="col-lg-6" href="@("../EditWebsite/AddNews")"> <input class="btn btn-info" type="button" value="Add a News (+)"> </a>
    </div>


</body>